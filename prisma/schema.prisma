generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  email String @unique
  name String 
  password String
  apikey String?
  websites Website[]
  //visits Visits[]
  //page_views Page_view[]
}

model Website {
  id String @id @default(uuid())
  website_name String @unique
  userid String
  user User @relation(fields: [userid], references: [id])
  visits Visits[]
  events Events[]
}

model Visits {
  id String @id @default(uuid())
  created_at DateTime @default(now())
  website_id String
  //userid String
  source String?
  //user User @relation(fields: [userid], references: [id])
  website Website @relation(fields: [website_id] , references: [website_name])
}

model Page_view {
  id String @id @default(uuid())
  created_at DateTime @default(now())
  //userid String
  domain String
  page String
  //user User @relation(fields: [userid], references: [id])
}

model Events {
  id String @id @default(uuid())
  created_at DateTime @default(now())
  event_name String
  website_id String
  message String
  website Website @relation(fields: [website_id] , references: [website_name])
}